{
    "name": "translateX",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "一个漂亮的翻译插件~",
    "permissions": ["declarativeContent", "storage"],
    "author": "江涛 jtaobox@gmail.com",
    "content_scripts": [{
        "js": [ 
            "js/lib/jquery.min.js", 
            "js/lib/Tip.js", 
            "js/lib/Http.js", 
            "js/main.js" 
        ],
        "css": [
            "css/main.css"
        ],
        "matches": [ "http://*/*", "https://*/*" ]
    }],
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": "hello_extensions.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": true
      },
    "commands": {
        "_execute_browser_action": {
          "suggested_key": {
            "default": "Ctrl+Shift+F",
            "mac": "MacCtrl+Shift+F"
          },
          "description": "Opens hello.html"
        }
    }
}